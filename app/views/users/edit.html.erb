<h1 class="title">Edit Account</h1>

<%= form_with model: @user, url: user_path, method: :patch, class: "space-y-6 max-w-xl w-full" do |form| %>
  <% if @user.errors.any? %>
    <div class="error-container">
      <strong>There were some problems:</strong>
      <ul class="error">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, class: "input-key" %>
    <%= form.text_field :username, class: "input-value" %>
  </div>

  <div>
    <%= form.label :name, class: "input-key" %>
    <%= form.text_field :name, class: "input-value" %>
  </div>

  <div>
    <%= form.label :email_address, class: "input-key" %>
    <%= form.email_field :email_address, class: "input-value" %>
  </div>

  <div>
    <%= form.label :password, class: "input-key" %>
    <%= form.password_field :password, class: "input-value" %>
    <small class="text-sm text-gray-500">Leave blank if you donâ€™t want to change it</small>
  </div>

  <div>
    <%= form.label :password_confirmation, class: "input-key" %>
    <%= form.password_field :password_confirmation, class: "input-value" %>
  </div>

  <div class="flex justify-center">
    <%= form.submit "Save", class: "btn" %>
  </div>
<% end %>
