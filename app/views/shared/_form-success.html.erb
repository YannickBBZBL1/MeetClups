<% if flash[:notice] %>
  <div
    id="success-card"
    class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6 shadow-md transition-opacity duration-500"
  >
    <p class="font-medium"><%= flash[:notice] %></p>
  </div>

  <script>
      setTimeout(() => {
          const card = document.getElementById("success-card");
          if (card) {
              card.style.opacity = 0;
              setTimeout(() => card.remove(), 500);
          }
      }, 5000);
  </script>
<% end %>
