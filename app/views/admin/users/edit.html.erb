<h1>Update user: <%= @user.username %></h1>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email_address %><br>
    <%= form.email_field :email_address %>
  </div>

  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :role %><br>
    <%= form.select :role, User.roles.keys.map { |r| [r.humanize, r] } %>
  </div>

  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>
