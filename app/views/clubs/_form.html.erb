<%= form_with(model: club, class: "space-y-6 max-w-xl w-full") do |form| %>
  <% if club.errors.any? %>
    <div class="error-container">
      <strong class="font-bold">There were some problems:</strong>
      <ul class="error">
        <% club.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "input-key" %>
    <%= form.text_field :title, class: "input-value" %>
  </div>

  <div>
    <%= form.label :description, class: "input-key" %>
    <%= form.text_area :description, rows: 5, class: "input-value" %>
  </div>

  <div class="flex justify-center">
    <%= form.submit "Save", class: "btn" %>
  </div>
<% end %>
