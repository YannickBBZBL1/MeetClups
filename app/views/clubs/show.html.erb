<%= render @club %>
<% if authenticated? %>
  <% if policy(@club).join? %>
  <%= button_to "Join this club", join_club_path(@club), method: :post, class: "btn" %>
  <% end %>
  <% if policy(@club).edit? %>
  <div class="flex gap-x-5">
    <%= link_to "Edit this club", edit_club_path(@club), class: "btn" %>
    <%= button_to "Destroy this club", @club, method: :delete, class: "btn" %>
  </div>
  <% end %>
  <%= link_to "Meetups", club_meetups_path(@club) %>
<% end %>
<%= link_to "Back to clubs", clubs_path %>
